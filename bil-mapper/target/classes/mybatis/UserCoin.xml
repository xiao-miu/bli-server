<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bilibil.mapper.MapperUserCoin">
    <update id="updateUserCoinAmount">
        update t_user_coin
        set
            amount = #{size},
            updateTime = #{updateTime}
        where
            userId = #{userId}
    </update>
    <!--    resultType="java.lang.Long"查询到结果的（接收到的）类型    parameterType通过反射发现接口的数据类型（可以不写） -->


    <select id="selectVideoCoinAmounts" parameterType="java.lang.Long" resultType="java.lang.Integer">
        select amount
        from t_user_coin
        where
        userId = #{userId}
    </select>
</mapper>
